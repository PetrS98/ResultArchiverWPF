<UserControl x:Class="WPFUtilsLib.UserControls.IOs.BitsStatus.BitStatus"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFUtilsLib.UserControls.IOs.BitsStatus"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="200">

    <Border>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="633*"/>
                <ColumnDefinition Width="25"/>
            </Grid.ColumnDefinitions>

            <local:BitStatusDot x:Name="bsd" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            
            <TextBlock x:Name="textBlock" HorizontalAlignment="Stretch" Text="TextBlock" VerticalAlignment="Center" TextAlignment="Right" Foreground="White" Margin="0,0,10,0"/>

        </Grid>
    </Border>
    
</UserControl>
